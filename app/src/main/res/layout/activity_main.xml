<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20px"
    android:background="@drawable/shape_activity_background"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/add_info"
            style="@style/Main_Icon_Style"
            android:drawableTop="@mipmap/main_icon_add_info"
            android:text="@string/add_info" />
        <TextView
            android:id="@+id/add_record"
            style="@style/Main_Icon_Style"
            android:drawableTop="@mipmap/main_icon_add_record"
            android:text="@string/add_record" />
        <TextView
            android:id="@+id/query_record"
            style="@style/Main_Icon_Style"
            android:drawableTop="@mipmap/main_icon_query"
            android:text="@string/query_record" />
    </LinearLayout>


    <TextView
        style="@style/TvStyle_28_949494"
        android:text="@string/version"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        />
</RelativeLayout>